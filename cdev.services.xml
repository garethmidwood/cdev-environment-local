<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>

        <!-- Command classes -->

        <service id="cdev.local_setup" class="Cdev\Local\Environment\Command\SetupEnvCommand">
            <argument type="service" id="environment.type.local" />
            <argument type="service" id="cdev.system_composer" />
            <argument type="service" id="symfony.filesystem" />
        </service>

        <service id="cdev.local_container_mysql" class="Cdev\Local\Environment\Command\Container\Mysql">
            <argument type="service" id="symfony.filesystem" />
        </service>

        <service id="cdev.local_container_php"
            class="Cdev\Local\Environment\Command\Container\Php">
        </service>

        <service id="cdev.local_container_mailcatcher"
            class="Cdev\Local\Environment\Command\Container\Mailcatcher">
        </service>

        <service id="cdev.local_container_redis"
            class="Cdev\Local\Environment\Command\Container\Redis">
        </service>

        <service id="cdev.local_container_drush"
            class="Cdev\Local\Environment\Command\Container\Drush">
        </service>


        <!-- Environments -->

        <service id="environment.type.local" class="Cdev\Local\Environment\Local">
            <argument type="service" id="cdev.system_local" />
            <argument type="service" id="cdev.system_local_compose" />
            <argument type="service" id="cdev.system_local_sync" />
            <argument type="service" id="cdev.environment.framework" />
            <argument type="service" id="cdev.config" />
        </service>


        <!-- System commands -->

        <service id="cdev.system_local"
            class="Cdev\Local\Environment\System\Local">
        </service>

        <service id="cdev.system_local_compose"
            class="Cdev\Local\Environment\System\Compose\Compose">
        </service>

        <service id="cdev.system_local_sync"
            class="Cdev\Local\Environment\System\Sync\Sync">
        </service>
        
    </services>
</container>
